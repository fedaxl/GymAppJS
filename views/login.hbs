{{!-- Login page - form to submit a members email address and password --}}
{{> welcomemenu id='login' }}
<div class="ui two column middle aligned grid basic segment">
  <div class="column">
<form class="ui stacked segment form" action="/authenticate" method="POST">
  <h3 class="ui header">Log-in</h3>
  {{!-- email address --}}
  <div class="field">
    <label>Email</label> <input placeholder="Email" name="email">
  </div>
  {{!-- password --}}
  <div class="field">
    <label>Password</label> <input placeholder="******" type="password" name="password">
  </div>
  {{!-- button to submit the login in input --}}
  <button class="ui blue submit button">Login</button>
    </form>
  </div>
  <div class="column">
    <img src="images/sport_icons.jpg" alt="sports icon for BMI tracker" class="ui image">
  </div>
</div>